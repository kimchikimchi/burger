<h1>Burger-Burger</h1>

<h2>Burgers ready to be eaten</h2>

<ul id="uneatenBurgers">
    {{#each burgers}}
        {{#unless devoured}}
            <!-- Todo: Put ID and burger description here -->
            <div class="btn-group" role="group" aria-label="First group">
                <button type="button" class="btn btn-secondary" data-id="{{id}}">Eat {{id}} - {{burger_name}}</button>
            </div>
            <br>
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Eaten</h2>

<ul id="eatenBurgers">
    {{#each burgers}}
        {{#if devoured}}
            <p>{{id}} - {{burger_name}}</p>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>
